<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CreatEvent" >

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:background="@null"
        android:contentDescription="@string/des"
        android:src="@drawable/back" />
    <EditText
        android:id="@+id/c_dt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/back"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="40dp"
    android:background="#FFFFFF"
    android:ems="10"
    android:gravity="center_horizontal"
    android:hint="@string/date"
    android:textSize="25sp" />
    <EditText
        android:id="@+id/c_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/c_dt"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:ems="10"
    android:gravity="center_horizontal"
    android:hint="@string/time"
    android:textSize="25sp" />
    <EditText
        android:id="@+id/c_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/c_time"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:ems="10"
    android:gravity="center_horizontal"
    android:hint="@string/area"
    android:textSize="25sp" />
    <EditText
        android:id="@+id/c_budget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/c_area"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="#FFFFFF"
    android:ems="10"
    android:gravity="center_horizontal"
    android:hint="@string/budget"
    android:textSize="25sp" />
    
    <ImageButton
        android:id="@+id/add_parti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c_budget"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:contentDescription="@string/des"
        android:src="@drawable/add_participants" />
    
    <ImageButton
        android:id="@+id/ok_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:contentDescription="@string/des"
        android:src="@drawable/ok_add" />
</RelativeLayout>
